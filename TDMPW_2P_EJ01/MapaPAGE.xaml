<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TDMPW_2P_EJ01.MapaPAGE"
             Title="MapaPAGE">
    <VerticalStackLayout>
        <Label 
            Text="Ubicate"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="Header"
            FontAttributes="Bold"
            Margin="20"
        />

        <Image
            Source="mapa.jpg"
            WidthRequest="300"
            HeightRequest="300"
            Aspect="AspectFill"
            Margin="20"
        />

        <Label
            Text="Usa el mapa para ubicarte, gato"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            FontAttributes="Bold"
            FontSize="Body"
            Margin="25"
            
        />
    </VerticalStackLayout>
</ContentPage>